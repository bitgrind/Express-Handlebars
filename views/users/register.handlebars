<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class="pstv-logo" src="/img/pstv-logo.png" alt="">
      <h3>Register</h3>
      <form method="POST" action="/users/register">
        <div class="form-group">
          <label for="name">Name</label>
          <input class="form-control" type="text" name="name" value="{{name}}" required>
        </div>
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control" type="email" name="email" value="{{email}}" required>
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control" type="password" name="password" value="{{password}}" required>
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input class="form-control" type="password" name="password2" value="{{password2}}" required>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>